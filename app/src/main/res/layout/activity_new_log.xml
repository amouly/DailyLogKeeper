<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/maintoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:navigationIcon="@drawable/ic_arrow_back_white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    tools:context="com.imherolddev.dailylogkeeper.NewLogActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/listview_margin"
                    android:layout_alignLeft="@+id/et_title"
                    android:layout_below="@+id/tv_entry"
                    android:ems="10"
                    android:hint="@string/et_hint_entry"
                    android:inputType="textMultiLine|textCapSentences"
                    android:textSize="@dimen/tv_text_size"/>

                <TextView
                    android:id="@+id/tv_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_below="@+id/et_title"
                    android:text="@string/tv_log_entry"
                    android:textSize="@dimen/tv_text_size"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/listview_margin"
                    android:layout_alignLeft="@+id/tv_entry"
                    android:layout_below="@+id/tv_title"
                    android:ems="10"
                    android:hint="@string/et_hint_title"
                    android:textSize="@dimen/tv_text_size"
                    android:inputType="textCapWords"/>

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/tv_job"
                    android:textSize="@dimen/tv_text_size"
                    android:textStyle="bold"/>

                <AutoCompleteTextView
                    android:id="@+id/et_job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/listview_margin"
                    android:layout_below="@+id/tv_job"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="@string/et_job_hint"
                    android:textSize="@dimen/tv_text_size"
                    android:inputType="textCapWords"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding"
                    android:layout_alignLeft="@+id/et_job_name"
                    android:layout_below="@+id/et_job_name"
                    android:text="@string/tv_log_title"
                    android:textSize="@dimen/tv_text_size"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>
